{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],  // Ensure Node.js types are included
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"]
}
